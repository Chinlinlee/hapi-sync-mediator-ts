{
    "appenders": {
        "hapi-to-burni": {
            "type": "file",
            "filename": "log/hapi-to-burni.log",
            "maxLogSize": 10485760,
            "numBackups": 3
        },
        "errorFile": {
            "type": "file",
            "filename": "log/errors.log"
        },
        "errors": {
            "type": "logLevelFilter",
            "level": "ERROR",
            "appender": "errorFile"
        }
    },
    "categories": {
        "default": {
            "appenders": [
                "hapi-to-burni",
                "errors"
            ],
            "level": "DEBUG"
        }
    }
}